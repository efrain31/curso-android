<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.gallery.GalleryFragment">

    <TextView
        android:id="@+id/txt_gallery"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.119" />

    <ScrollView
        android:layout_width="324dp"
        android:layout_height="350dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.619">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/imgAccesorio01"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/moto1" />

            <ImageView
                android:id="@+id/imgAccesorio02"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/moto2" />

            <ImageView
                android:id="@+id/imgAccesorio03"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/moto3" />

            <ImageView
                android:id="@+id/imgAccesorio04"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/moto4" />

            <ImageView
                android:id="@+id/imgAccesorio05"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/moto5" />
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>